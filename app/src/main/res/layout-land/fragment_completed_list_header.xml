<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Completed To-Dos"
        android:typeface="serif"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#c63d45"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/set_as_incomplete_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="54dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      ↑ Move to To-Do ↑      "
        android:background="#4fd5d6"
        android:elevation="12dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:typeface="serif"
        android:id="@+id/set_as_incomplete_button"
        android:onClick="setAsIncomplete"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="14dp" />

</RelativeLayout>
