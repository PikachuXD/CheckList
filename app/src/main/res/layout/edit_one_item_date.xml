<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="serif"
        android:id="@+id/datetime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Set Date"
        android:background="#4fd5d6"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:typeface="serif"
        android:id="@+id/changedatetime"
        android:onClick="editDate"
        android:layout_alignTop="@+id/editDate"
        android:layout_toLeftOf="@+id/editDate"
        android:layout_toStartOf="@+id/editDate" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Set Time"
        android:background="#4fd5d6"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:typeface="serif"
        android:onClick="editTime"
        android:id="@+id/editDate"
        android:layout_below="@+id/datetime"
        android:layout_toLeftOf="@+id/cleardatetime"
        android:layout_toStartOf="@+id/cleardatetime"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="30sp"
        android:typeface="serif"
        android:id="@+id/date"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:text="Medium Text"
        android:typeface="serif"
        android:id="@+id/time"
        android:textColor="#000000"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/cleardatetime"
        android:background="#4fd5d6"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:typeface="serif"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"
        android:onClick="clearTime"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/datetime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/changedatetime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date &amp; Time"
        android:typeface="serif"
        android:id="@+id/textView2"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/datetime"
        android:layout_toEndOf="@+id/datetime" />

</RelativeLayout>
